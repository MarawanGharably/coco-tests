{
    "env": {
        "browser": true,
        "es6": true,
        "jest/globals": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "plugins": [
        "react",
        "react-hooks",
        "jest",
        "emotion"
    ],
    "rules": {
        "no-console": [
            "error",
            {
                "allow": [
                    "error"
                ]
            }
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "react/prop-types": [
            2,
            {
                "ignore": [
                    "children",
                    "className"
                ]
            }
        ],
        "import/prefer-default-export": "off",
        "no-restricted-imports": "off",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        "arrow-parens": ["off"],
        "object-curly-newline": ["off"],
        "arrow-body-style": ["off"],
        "no-multiple-empty-lines": [
            2,
            {
                "max": 99,
                "maxEOF": 0
            }
        ]
    }
}
